{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "API for Leave and Holiday Management",
    "version": "1.0.0"
  },
  "host": "localhost:5001",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "jwtAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "any" },
                "lastName": { "example": "any" },
                "age": { "example": "any" },
                "email": { "example": "any" },
                "password": { "example": "any" },
                "role": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "any" },
                "password": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/users/": {
      "get": {
        "description": "",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          { "name": "firstName", "in": "query", "type": "string" },
          { "name": "email", "in": "query", "type": "string" },
          { "name": "role", "in": "query", "type": "string" },
          { "name": "page", "in": "query", "type": "string" },
          { "name": "limit", "in": "query", "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/v1/users/employee/{id}": {
      "get": {
        "description": "",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/v1/users/employee/update/{id}": {
      "put": {
        "description": "",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "default": { "description": "" } }
      }
    },
    "/api/v1/users/employee/{deleteid}": {
      "delete": {
        "description": "",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          { "name": "deleteid", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/v1/holiday/holiday-request": {
      "post": {
        "description": "Create a new holiday request",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "startDate": { "type": "string", "example": "2024-11-01" },
                "endDate": { "type": "string", "example": "2024-11-05" },
                "employeeId": { "type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Holiday request created successfully" },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/holiday/all-holidays": {
      "get": {
        "description": "Retrieve all holiday requests (Admin only)",
        "security": [
          { "jwtAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "List of holiday requests",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "employeeId": { "type": "string" },
                  "startDate": { "type": "string" },
                  "endDate": { "type": "string" },
                  "status": { "type": "string" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/v1/holiday/holiday-responce/{id}": {
      "put": {
        "description": "Update holiday request status",
        "security": [
          { "jwtAuth": [] }
        ],
       
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string", "example": "accepted" },
                "reason": { "type": "string", "example": "Reason for rejection" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Holiday request updated successfully" },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/holiday/holiday-request/{id}": {
      "post": {
        "description": "Get holiday requests by employee ID",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of holiday requests by employee",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "startDate": { "type": "string" },
                  "endDate": { "type": "string" },
                  "status": { "type": "string" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/holiday/holiday-user/delete/{id}": {
      "delete": {
        "description": "",
        "security": [
          { "jwtAuth": [] }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "403": { "description": "Forbidden" }
        }
      }
    }
  }
}